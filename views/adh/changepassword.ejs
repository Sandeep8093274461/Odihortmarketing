<div class="content-wrapper" ng-controller="myADHChangePasswordCtrl">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <h1><%= title %></h1>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active"><%= title %></li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <form class="form-horizontal" method="POST" role="form" name="cpForm"
                ng-submit="changePassword(cpForm.$valid)" ng-init="randomNoInit('<%= randomNo %>')" autocomplete="off"
                novalidate>
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Enter Passwords (Old & New)</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i
                                    class="fas fa-minus"></i></button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 col-sm-3 col-xs-12"></div>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label>Old Password</label>
                                    <div class="input-group">
                                        <input type="password" class="form-control" name="oldPassword"
                                            ng-model="txtOldPassword" maxlength="50" placeholder="Enter Old Password"
                                            required>
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span class="fas fa-lock"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div ng-show="cpForm.$submitted || cpForm.oldPassword.$touched"
                                        style="color:red; text-align: right;">
                                        <span ng-show="cpForm.oldPassword.$error.required">This is a
                                            required field</span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>New Password</label>
                                    <div class="input-group">
                                        <input type="password" class="form-control" ng-change="analyzeNP();"
                                            ng-minlength="6" name="newPassword" ng-model="txtNewPassword"
                                            placeholder="Enter New Password" maxlength="50" required
                                            data-toggle="tooltip" data-placement="left"
                                            title="The Password must contain at least 1 lowercase & 1 uppercase alphabetical character, 1 numeric character, 1 special character and must be 6 characters or longer">
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span ng-style="npCheck" ng-class="nPWDCheck"></span>
                                                <span class="fas fa-lock"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div ng-show="cpForm.$submitted || cpForm.newPassword.$touched"
                                        style="color:red; text-align: right;">
                                        <span ng-show="cpForm.newPassword.$error.required">This is a
                                            required field</span>
                                        <span ng-show="cpForm.newPassword.$error.minlength">Password is too
                                            short</span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Confirm Password</label>
                                    <div class="input-group">
                                        <input type="password" class="form-control" ng-change="analyzeCP();"
                                            ng-minlength="6" name="confirmPassword" ng-model="txtConfirmPassword"
                                            placeholder="Confirm Password" maxlength="50" required data-toggle="tooltip"
                                            data-placement="left"
                                            title="The Password must contain at least 1 lowercase & 1 uppercase alphabetical character, 1 numeric character, 1 special character and must be 6 characters or longer"
                                            placeholder="Confirm Password">
                                        <div class="input-group-append">
                                            <div class="input-group-text">
                                                <span ng-style="cpCheck" ng-class="cPWDCheck"></span>
                                                <span class="fas fa-lock"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div ng-show="cpForm.$submitted || cpForm.confirmPassword.$touched"
                                        style="color:red; text-align: right;">
                                        <span ng-show=" cpForm.confirmPassword.$error.required">This is a
                                            required field</span>
                                        <span ng-show="cpForm.confirmPassword.$error.minlength">Password is
                                            too short</span>
                                        <span>{{pnm}}</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-3 col-xs-12"></div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Change password</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
</div>
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>