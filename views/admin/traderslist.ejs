<link rel="stylesheet" href="../../public/stylesheets/pagination.css">
<div class="content-wrapper" ng-controller="myAdminTradersListCtrl" ng-init="getTradersList()">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <h1><%= title %></h1>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active"><%= title %></li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Traders List</h3>
                            <div class="card-tools" style="display: inline-flex">
                                <p style="margin-bottom: -3px;">No. of Records&nbsp;</p>
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <input type="number" ng-model="pageSize" min="1" max="10000000"
                                        class="form-control float-right" placeholder="No. of Records">
                                    <div class="input-group-append">
                                        <button type="button" class="btn btn-default"><i
                                                class="fas fa-edit"></i></button>
                                    </div>&nbsp;
                                </div>
                                <div class="input-group input-group-sm" style="width: 150px;">
                                    <input type="text" name="table_search" ng-model="search"
                                        class="form-control float-right" placeholder="Search">
                                    <div class="input-group-append">
                                        <button type="button" class="btn btn-default"><i
                                                class="fas fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body table-responsive p-0">
                            <table class="table table-hover text-wrap">
                                <thead>
                                    <tr>
                                        <th ng-click="sort('DuplicateID')" style="cursor: pointer;">
                                            Serial No.
                                            <span class="fa fa-sort" ng-show="sortKey=='DuplicateID'"
                                                ng-class="{'fa fa-sort-down': reverse, 'fa fa-sort-up': !reverse}"></span>
                                        </th>
                                        <th ng-click="sort('DistrictName')" style="cursor: pointer;">
                                            District
                                            <span class="fa fa-sort" ng-show="sortKey=='DistrictName'"
                                                ng-class="{'fa fa-sort-down': reverse, 'fa fa-sort-up': !reverse}"></span>
                                        </th>
                                        <th ng-click="sort('TraderName')" style="cursor: pointer;">
                                            Trader's Name
                                            <span class="fa fa-sort" ng-show="sortKey=='TraderName'"
                                                ng-class="{'fa fa-sort-down': reverse, 'fa fa-sort-up': !reverse}"></span>
                                        </th>
                                        <th ng-click="sort('TraderContactNo')" style="cursor: pointer;">
                                            Trader's Contact No.
                                            <span class="fa fa-sort" ng-show="sortKey=='TraderContactNo'"
                                                ng-class="{'fa fa-sort-down': reverse, 'fa fa-sort-up': !reverse}"></span>
                                        </th>
                                        <th ng-click="sort('Commodity')" style="cursor: pointer;">
                                            Commodity
                                            <span class="fa fa-sort" ng-show="sortKey=='Commodity'"
                                                ng-class="{'fa fa-sort-down': reverse, 'fa fa-sort-up': !reverse}"></span>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr
                                        dir-paginate="i in tradersList | orderBy: sortKey: reverse | filter: search | itemsPerPage: pageSize">
                                        <td>{{i.DuplicateID}}</td>
                                        <td>{{i.DistrictName | capitalize}}</td>
                                        <td>{{i.TraderName | capitalize}}</td>
                                        <td>{{i.TraderContactNo}}</td>
                                        <td>{{i.Commodity | capitalize}}</td>
                                    </tr>
                                </tbody>
                            </table>
                            <div style="text-align: center;">
                                <dir-pagination-controls max-size="10" direction-links="true" boundary-links="true">
                                </dir-pagination-controls>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>