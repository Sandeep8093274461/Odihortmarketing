<div class="content-wrapper" ng-controller="myAdminUnavailableItemsListCtrl" ng-init="getUnavailableItems();">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <h1><%= title %></h1>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active"><%= title %></li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Unavailable Items List</h3><br>
                        </div>
                        <div class="card-body table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Serial No.</th>
                                        <th>Items</th>
                                        <th>Stock In Quantity</th>
                                        <th>Stock Out Quantity</th>
                                        <th>Available Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="i in unavailableItems">
                                        <td>{{$index + 1}}</td>
                                        <td>{{i.ItemName}}</td>
                                        <td>{{i.StockInQuantity}} {{i.Unit}}</td>
                                        <td>{{i.StockOutQuantity}} {{i.Unit}}</td>
                                        <td>{{i.AvailableQuantity}} {{i.Unit}}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="card-footer clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>