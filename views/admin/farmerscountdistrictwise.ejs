<div class="content-wrapper" ng-controller="myAdminFarmersCountCtrl" ng-init="getFarmersCount();">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <h1><%= title %></h1>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active"><%= title %></li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="modal fade" id="myModal">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4>Total Farmers in {{districtName | capitalize}}: {{fddw.length}}</h4>
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="modal-body">
                            <div class="table-responsive" ng-show="fddw.length > 0">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Serial No.</th>
                                            <th>Farmer's Name</th>
                                            <th>Farmer's Mobile</th>
                                        </tr>
                                    </thead>
                                    <tr ng-repeat="i in fddw">
                                        <td>{{$index + 1}}</td>
                                        <td>{{i.FarmerName | capitalize}}</td>
                                        <td>{{i.FarmerMobileNo}}</td>
                                    </tr>
                                </table>
                            </div>
                            <h4 ng-show="fddw.length == 0" style="color: red">No Farmers are available</h4>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Total no. of Farmers district-wise</h3><br>
                            <p style="margin-bottom: 0;">Total Farmers: {{totalFarmers.FarmerCount}}
                        </div>
                        <div class="card-body table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Serial No.</th>
                                        <th>District</th>
                                        <th>No. of Farmers</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-click="getFarmerDetailsDistrictWise(i.DistrictCode, i.DistrictName)"
                                        data-toggle="modal" data-target="#myModal"
                                        ng-repeat="i in districtWiseFarmersCount">
                                        <td><a href="" data-toggle="tooltip" data-placement="top"
                                                title="Click to view farmers' details">{{$index + 1}}</td>
                                        <td><a href="" data-toggle="tooltip" data-placement="top"
                                                title="Click to view farmers' details">{{i.DistrictName | capitalize}}</a>
                                        </td>
                                        <td><a href="" data-toggle="tooltip" data-placement="top"
                                                title="Click to view farmers' details">{{i.FarmerCount}}&nbsp;&nbsp;&nbsp;<img
                                                    src="../../public/images/icons/binocular.png" alt="binocular"
                                                    style="height: 9px;"></a></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="card-footer clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>