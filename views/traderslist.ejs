<%- include('header.ejs') -%>
<script type="text/javascript" src="../public/controllers/myTradersListCtrl.js"></script>
<link type="text/css" rel=stylesheet href="../public/stylesheets/bootstrap.min.css" />
<div class="content-outer" id="COntentDiv" ng-app="myApp" ng-controller="myTradersListCtrl" ng-cloak
    ng-init="getDistricts();" style="margin-bottom: 2.2%;">
    <div class="content">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="font-weight: bold; background: #074b72; color: white;">Traders List District-wise
                    </div>
                    <div class="panel-body" style="margin-bottom: 3.9%;">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="col-md-2 col-sm-2 col-xs-12"></div>
                            <div class="col-md-4 col-sm-4 col-xs-12">
                                <label class="control-label">Select District <span style="color: red">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                                    <select class="form-control" ng-model="ddlDistricts"
                                        ng-options="i.DistrictCode as i.DistrictName for i in districts">
                                        <option value="" disabled>Select District</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-12" style="text-align: right;">
                                <input type="button" class="btn btn-success"
                                    style="background-color:#074b72; color:white; margin-top: 7.4%;"
                                    value="View Trader List" ng-click="getTradersList()" />
                            </div>
                            <div class="col-md-2 col-sm-2 col-xs-12"></div>
                        </div>
                    </div>
                    <div class="panel-footer" style="display: flex;"></div>
                </div>
            </div>
        </div>
        <div class="row" ng-show="tradersList.length > 0">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="font-weight: bold; background: #074b72; color: white;">Traders List
                    </div>
                    <div class="panel-body">
                        <table class="table table-hover table-striped jambo_table bulk_action">
                            <thead>
                                <tr class="headings">
                                    <td style="vertical-align: middle"><b>Serial No.</b></td>
                                    <td style="vertical-align: middle" ng-show="ddlDistricts == 0"><b>District</b></td>
                                    <td style="vertical-align: middle"><b>Trader's Name</b></td>
                                    <td style="vertical-align: middle"><b>Commodity</b></td>
                                </tr>
                            </thead>
                            <tr ng-repeat="i in tradersList | orderBy: ['DistrictName', 'TraderName', 'Commodity']">
                                <td style="vertical-align: middle">{{$index + 1}}</td>
                                <td style="vertical-align: middle" ng-show="ddlDistricts == 0">{{i.DistrictName}}</td>
                                <td style="vertical-align: middle">{{i.TraderName}}</td>
                                <td style="vertical-align: middle">{{i.Commodity}}</td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('footer.ejs') -%>